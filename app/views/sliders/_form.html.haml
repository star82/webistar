= form_for @slider, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area'
  .control-group
    = f.label :priority, :class => 'control-label'
    .controls
      = f.number_field :priority, :class => 'number_field'
  .control-group
    = f.label :activity, :class => 'control-label'
    .controls
      = f.check_box :activity, :class => 'check_box'
  .control-group
    = f.label :image, :class => 'control-label'
    .controls
      = f.file_field :image, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), sliders_path, :class => 'btn'
