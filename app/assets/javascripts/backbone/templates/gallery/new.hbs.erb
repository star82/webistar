<form id="gallery" action="/galleries"  method="post" enctype="multipart/form-data">
<div class="modal hide fade" id="imageCreate">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Upload Image</h3>
  </div>
  <div class="modal-body">
        <div class="fileupload fileupload-new" data-provides="fileupload">
          <div class="fileupload-preview thumbnail" style="width: 200px; height: 150px;"></div>
          <div>
            <span class="btn btn-file"><span class="fileupload-new">Select image</span><span class="fileupload-exists">Change</span><input name="galleries[image]" type="file" /></span>
            <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
          </div>
        </div>
      <input type="text" name="galleries[name]"><br>
  </div>
  <div class="modal-footer">
    <a href="#gallery" class="btn" id="close">Close</a>
    <input type="submit" value="Upload image" class="btn btn-primary">
  </div>
</div>
</form>
